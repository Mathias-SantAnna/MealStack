<!-- Index.cshtml for Category -->
@model IEnumerable<MealStack.Infrastructure.Data.Entities.CategoryEntity>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h1>Categories</h1>
            <p class="text-muted">Manage recipe categories for better organization.</p>
        </div>
        <div class="col-md-4 text-md-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Create New Category
                </a>
            }
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="alert alert-info m-3">
                    <h5 class="alert-heading">No categories found!</h5>
                    <p>There are no categories in the system yet. Add some to organize your recipes better.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Color</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-@(string.IsNullOrEmpty(category.ColorClass) ? "secondary" : category.ColorClass)">
                                            @category.Name
                                        </span>
                                    </td>
                                    <td>@category.Description</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.ColorClass))
                                        {
                                            <div class="badge bg-@category.ColorClass">@category.ColorClass</div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Default</span>
                                        }
                                    </td>
                                    <td>@(category.CreatedBy?.UserName ?? "Unknown")</td>
                                    <td>@category.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Admin Dashboard
        </a>
    </div>
</div>