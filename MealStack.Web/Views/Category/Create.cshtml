<!-- Create.cshtml for Category -->
@model MealStack.Infrastructure.Data.Entities.CategoryEntity

@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-4">
    <h1>Create Category</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Color" class="form-label">Color</label>
                            <div class="input-group">
                                <input type="color" id="colorPicker" class="form-control form-control-color" value="#6c757d" title="Choose a color">
                                <input asp-for="Color" class="form-control" placeholder="#6c757d" />
                            </div>
                            <small class="text-muted">Choose a color for the category badge or leave blank for default</small>
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Sync the color picker with the text input
            $('#colorPicker').on('input', function() {
                $('#Color').val($(this).val());
            });
            
            $('#Color').on('input', function() {
                $('#colorPicker').val($(this).val());
            });
            
            // Initialize color picker with current value if exists
            if ($('#Color').val()) {
                $('#colorPicker').val($('#Color').val());
            }
        });
    </script>
}