@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Your Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Your Profile</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <p>@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <p>@Model.UserName</p>
                    </div>
                    <div class="mb-3">
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary">Manage Account</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Your Activity</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p>Profile stats coming soon!</p>
                        <p>You'll be able to see information about your recipes, favorites, and more.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h6>Your Recipes</h6>
                                    <a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-primary btn-sm">View Recipes</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h6>Your Ingredients</h6>
                                    <a asp-controller="Ingredient" asp-action="Index" class="btn btn-outline-success btn-sm">View Ingredients</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-body text-center">
                                    <h6>All Recipes</h6>
                                    <a asp-controller="Recipe" asp-action="AllRecipes" class="btn btn-outline-info btn-sm">Browse All</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>