@model MealStack.Infrastructure.Data.Entities.IngredientEntity

@{
    ViewData["Title"] = "Delete Ingredient";
}

<h1>Delete Ingredient</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this ingredient?</h3>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>
            
            <dt class="col-sm-3">Measurement</dt>
            <dd class="col-sm-9">@Model.Measurement</dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>