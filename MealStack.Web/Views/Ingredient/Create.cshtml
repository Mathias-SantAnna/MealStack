@model MealStack.Infrastructure.Data.Entities.IngredientEntity

@{
    ViewData["Title"] = "Create Ingredient";
}

<h1>Create Ingredient</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Ingredient Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Category" class="form-label"></label>
                    <input asp-for="Category" class="form-control" placeholder="e.g., Dairy, Vegetable, Protein" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Measurement" class="form-label"></label>
                    <input asp-for="Measurement" class="form-control" placeholder="e.g., cups, tablespoons, grams" />
                    <span asp-validation-for="Measurement" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}