@model IEnumerable<MealStack.Infrastructure.Data.Entities.RecipeEntity>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">🍽️ Welcome to MealStack</h1>
    <p class="lead mt-3">Your delicious recipes and ingredients — organized, editable, and always at your fingertips.</p>
</div>

<div class="row mt-5 justify-content-center">
    <div class="col-md-auto">
        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-secondary btn-lg px-4">Your Profile</a>
    </div>
    <div class="col-md-auto">
        <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary btn-lg px-4">Add New Recipe</a>
    </div>
    <div class="col-md-auto">
        <a asp-controller="Recipe" asp-action="MyRecipes" class="btn btn-outline-secondary btn-lg px-4">My Recipes</a>
    </div>
    <div class="col-md-auto">
        <a asp-controller="Ingredient" asp-action="Index" class="btn btn-outline-success btn-lg px-4">View Ingredients</a>
    </div>
    <div class="col-md-auto">
        <a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-info btn-lg px-4">All Recipes</a>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Only Admin can see:</h5>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-auto mb-2">
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-danger">Manage Users</a>
                        </div>
                        <div class="col-md-auto mb-2">
                            <a asp-controller="Admin" asp-action="ManageRecipes" class="btn btn-primary">Manage Recipes</a>
                        </div>
                        <div class="col-md-auto mb-2">
                            <a asp-controller="Admin" asp-action="ManageIngredients" class="btn btn-success">Manage Ingredients</a>
                        </div>
                        <div class="col-md-auto mb-2">
                            <a asp-controller="Admin" asp-action="Categories" class="btn btn-warning">Manage Categories</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<hr class="my-5" />

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h3 class="mb-0">📚 Manage Recipes</h3>
            </div>
            <div class="card-body">
                <p>Add, edit, delete, and view your favorite dishes with step-by-step instructions.</p>
                <div class="text-center mt-4">
                    <a asp-controller="Recipe" asp-action="Create" class="btn btn-primary">Add New Recipe</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h3 class="mb-0">🥕 Manage Ingredients</h3>
            </div>
            <div class="card-body">
                <p>Keep your ingredients list tidy and reusable across all your delicious recipes.</p>
                <div class="text-center mt-4">
                    <a asp-controller="Ingredient" asp-action="Create" class="btn btn-success">Add New Ingredient</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4 mb-4">
    <h2>Latest Recipes</h2>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text">@recipe.Description</p>
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge bg-@(recipe.Difficulty == MealStack.Infrastructure.Data.Entities.DifficultyLevel.Easy ? "success" :
                                                 recipe.Difficulty == MealStack.Infrastructure.Data.Entities.DifficultyLevel.Medium ? "warning" : "danger") me-2">
                                @recipe.Difficulty
                            </span>
                            <small class="text-muted">@(recipe.PrepTimeMinutes + recipe.CookTimeMinutes) min</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-sm btn-outline-secondary">View</a>
                            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || recipe.CreatedById == Context.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
                            {
                                <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="#" onclick="return confirmDelete(@recipe.Id, '@recipe.Title')" class="btn btn-sm btn-outline-danger">Delete</a>
                                
                                <!-- Hidden form for delete submission -->
                                <form id="delete-form-@recipe.Id" asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.Id" method="post" style="display: none;">
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                        </div>
                        <small class="text-muted">
                            Created by @(recipe.CreatedBy?.UserName ?? "Unknown") on @recipe.CreatedDate.ToShortDateString()
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No recipes found. Be the first to add a recipe!
    </div>
}