@{
    ViewData["Title"] = "Manage Ingredients";
}

<h2>Manage Ingredients</h2>

<div class="alert alert-primary">
    Welcome to the Ingredient Management panel.
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">All Ingredients</h5>
    </div>
    <div class="card-body">
        <p>Here you can view and manage all ingredients in the system.</p>
        
        <div class="alert alert-info">
            <strong>Coming Soon:</strong> Full ingredient management functionality.
        </div>
        
        <a asp-controller="Ingredient" asp-action="Index" class="btn btn-outline-success">View All Ingredients</a>
        <a asp-controller="Ingredient" asp-action="Create" class="btn btn-success">Add New Ingredient</a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to User Management</a>
    </div>
</div>