@model IEnumerable<MealStack.Infrastructure.Data.RecipeEntity>
@{
    ViewData["Title"] = "All Recipes";
}

<!-- Page Header -->
<div class="container-fluid bg-light py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">All Recipes</h1>
                <p class="text-muted">Browse and discover recipes from all users.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i> Add New Recipe
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_SearchBar" model="@null" />
<partial name="_CategoriesNav" />
<partial name="_MessageAlerts" />

<!-- Recipe Grid -->
@{
    ViewData["EmptyMessage"] = "No favorites yet!";
    ViewData["EmptyDescription"] = "You haven't added any recipes to your favorites.";
    ViewData["EmptyButtonText"] = "Browse Recipes";
    ViewData["EmptyButtonAction"] = "Index";
}
<partial name="_RecipeGrid" model="Model" />

<!-- AJAX token -->
<partial name="_AjaxAntiForgeryToken" />

@section Scripts {
    <script src="~/js/modules/search.js"></script>
}