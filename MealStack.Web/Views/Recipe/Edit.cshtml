@model MealStack.Infrastructure.Data.RecipeEntity

@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container py-4">
    <h1>Edit Recipe</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form id="recipeForm" asp-action="Edit">
                <partial name="_RecipeForm" model="Model" />
            </form>
        </div>
    </div>
</div>

<!-- Modal for adding new ingredient -->
<partial name="_IngredientModal" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- jQuery UI -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    
    <!-- Reusable JS modules -->
    <script src="~/js/recipe/ingredientManager.js"></script>
    <script src="~/js/recipe/recipeForm.js"></script>
    
    <script>
        $(document).ready(function() {
            // Initialize recipe form in edit mode
            RecipeForm.init({
                isEdit: true
            });
        });
    </script>
}