@model IEnumerable<MealStack.Infrastructure.Data.RecipeEntity>
@{
    ViewData["Title"] = "My Recipes";
}

<!-- Page Header -->
<div class="container-fluid bg-light py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">My Recipes</h1>
                <p class="text-muted">Manage your personal recipe collection.</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Add New Recipe
                </a>
            </div>
        </div>
    </div>
</div>

<partial name="_SearchBar" model="@null" />
<partial name="_CategoriesNav" />
<partial name="_MessageAlerts" />

<!-- Recipe Grid -->
@{
    ViewData["EmptyMessage"] = "No recipes found!";
    ViewData["EmptyDescription"] = "You haven't created any recipes yet. Click 'Add New Recipe' to get started!";
    ViewData["EmptyButtonText"] = "Add Your First Recipe";
    ViewData["EmptyButtonAction"] = "Create";
}
<partial name="_RecipeGrid" model="Model" />

<!-- AJAX token -->
<partial name="_AjaxAntiForgeryToken" />

@section Scripts {
    <script src="~/js/search.js"></script>
}